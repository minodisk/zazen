{
  "framework": "mocha",
  "src_files": [
    "jquery.zazen.js",
    "tests/src/*.coffee"
  ],
  "serve_files": [
    "bower_components/jquery/jquery.js",
    "jquery.zazen.js",
    "node_modules/expect.js/expect.js",
    "tests/browser_test.js"
  ],
  "launchers": {
    "Mocha": {
      "command": "node_modules/.bin/mocha tests/node_test.js -R tap",
      "protocol": "tap"
    }
  },
  "launch_in_dev": [
    "Safari",
    "Firefox",
    "Chrome",
    "Mocha"
  ],
  "before_tests": "grunt before_tests",
  "after_tests": "grunt after_tests"
}