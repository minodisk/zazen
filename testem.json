{
  "framework": "mocha",
  "src_files": [
    "jquery.zazen.js",
    "test/src/*.coffee"
  ],
  "before_tests": "coffee -jcp test/src/test.coffee test/src/browser.coffee > test/browser_test.js & coffee -jcp test/src/node.coffee test/src/test.coffee > test/node_test.js",
  "serve_files": [
    "bower_components/jquery/jquery.js",
    "jquery.zazen.js",
    "node_modules/expect.js/expect.js",
    "test/browser_test.js"
  ],
  "launchers": {
    "Mocha": {
      "command": "node_modules/.bin/mocha test/node_test.js -R tap",
      "protocol": "tap"
    }
  },
  "launch_in_dev": [
    "Mocha",
    "Chrome",
    "Firefox",
    "Safari"
  ]
}