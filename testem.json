{
  "framework"    : "mocha",
  "src_files"    : [
    "lib/*.js",
    "test/*.coffee"
  ],
  "before_tests": "coffee -cp test/test.coffee > test/browser_test.js & coffee -jcp test/require.coffee test/test.coffee > test/node_test.js",
  "serve_files"  : [
    "lib/*.js",
    "node_modules/expect.js/expect.js",
    "test/browser_test.js"
  ],
  "launchers"    : {
    "Mocha": {
      "command": "node_modules/.bin/mocha test/node_test.js -R tap",
      "protocol": "tap"
    }
  },
  "launch_in_dev": [
    "Mocha",
    "Chrome",
    "Firefox",
    "Safari"
  ]
}